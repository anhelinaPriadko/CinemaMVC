@model IEnumerable<CinemaDomain.Model.Hall>

@{
    ViewData["Title"] = "Index";
}

<h1>Зали</h1>

<p>
    <a asp-action="Create">сворити новий</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsInRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsInRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsBySeats" asp-route-id="@item.Id">DetailsBySeats</a> |
                <a asp-action="DetailsBySessions" asp-route-id="@item.Id">DetailsBySessions</a>|
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
