@model CinemaDomain.Model.Booking

@{
    ViewData["Title"] = "Edit Booking (Change Seat)";
}

<h1>Змінити бронювання (змінити місце)</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ViewerId" />
    <input type="hidden" asp-for="SessionId" />
    <input type="hidden" asp-for="SeatId" />

    <div class="form-group">
        <label>Current Seat</label>
        <input class="form-control" value="@Model.Seat?.Id" readonly />
    </div>

    <div class="form-group">
        <label>New Seat</label>
        <select name="NewSeatId" class="form-control">
            <option value="">Select a seat</option>
            @foreach (var seat in ViewBag.Seats as List<CinemaDomain.Model.Seat>)
            {
                <option value="@seat.Id">
                    @seat.Id
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index">Back to List</a>
